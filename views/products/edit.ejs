<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=product.name%></h1>
        <div style="width:30%; margin:25px auto">
            <form action="/products/<%= product._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="product[name]" value="<%=product.name%>" >
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="product[price]" value="<%=product.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="image" accept="image/*" value="<%=product.image%>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="product[description]" value="<%=product.description%>">
                </div>

                    <input class="form-control" type="hidden" name="product[label]" value="<%=product.label%>">
				<input class="form-control" type="hidden" name="product[label]" value="<%=product.label%>">
				<input class="form-control" type="hidden" name="product[objectname]" value="<%=product.objectname%>">
				<input class="form-control" type="hidden" name="width" value="<%=product.width%>">
				<input class="form-control" type="hidden" name="height" value="<%=product.height%>">
				<input class="form-control" type="hidden" name="ptx" value="<%=product.ptx%>">
				<input class="form-control" type="hidden" name="pty" value="<%=product.pty%>">
				<input class="form-control" type="hidden" name="extendwidth" value="<%=product.extendwidth%>">
				<input class="form-control" type="hidden" name="extendheight" value="<%=product.extendheight%>">
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/products">Go Back</a>
        </div>
    </div>


</div>
<% include ../partials/footer %>